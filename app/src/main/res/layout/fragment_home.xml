                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="@dimen/font_size_20"
                            android:layout_weight=".4"
                            android:orientation="vertical">

