<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/group1"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/btnSampleQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="80dp"
            android:text="Sample Quiz"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/group2" />

        <TextView
            android:id="@+id/btnSampleFlip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample FlipCard"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/btnSampleQuiz"
            app:layout_constraintStart_toStartOf="@+id/btnSampleQuiz"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:srcCompat="@drawable/group3" />

        <TextView
            android:id="@+id/btnExamPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exam Pro"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/btnSampleFlip"
            app:layout_constraintStart_toStartOf="@+id/btnSampleFlip"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/rounded_btn"
            android:gravity="center"
            android:text="@string/result"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintEnd_toStartOf="@+id/txtProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_btn"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/txtResult"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/txtResult" />

        <TextView
            android:id="@+id/txtRef"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_btn"
            android:gravity="center"
            android:text="@string/refer"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/txtProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtProfile"
            app:layout_constraintTop_toTopOf="@+id/txtProfile" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>