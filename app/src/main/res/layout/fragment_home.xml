<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtDashboard"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@+id/txtCrc"
            android:background="@color/colorLight"
            android:gravity="center"
            android:text="Dashboard"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_16" />

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDashboard"
            android:layout_margin="@dimen/margin_30"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSampleQuiz"
                style="@style/setFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_bg"
                android:text="Sample Quiz"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_16" />

            <Button
                android:id="@+id/btnSampleFlip"
                style="@style/setFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/edt_bg"
                android:text="Sample Flipcard"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_16" />

            <Button
                android:id="@+id/btnExamPro"
                style="@style/setFontStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@drawable/edt_bg"
                android:text="Exam Pro"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_16" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_button"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtResult"
                style="@style/setFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_oval"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/margin_20"
                android:text="Results"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/txtProfile"
                style="@style/setFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_oval"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/margin_20"
                android:text="Profile"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/txtRef"
                style="@style/setFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/ic_oval"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/margin_20"
                android:text="Refer"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDirMsgTitle"
            style="@style/setFontStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_2"
            android:layout_marginTop="@dimen/margin_30"
            android:gravity="center"
            android:text="Director's Message"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_24" />

        <TextView
            android:id="@+id/txtDirMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDirMsgTitle"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_20"
            android:autoSizeMaxTextSize="150sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="5sp"
            android:autoSizeTextType="uniform"
            android:padding="@dimen/margin_10"
            android:text="@string/directr_msg"
            android:textAlignment="center" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_homelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>